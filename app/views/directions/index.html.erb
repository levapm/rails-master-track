<% content_for :main do %>

  <div class="row">
    <div class="col-lg-12">
      <form id="js-hotel-directions" class="form-inline" role="form">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Start</label>
          <input type="text" class="form-control" id="js-start" placeholder="Starting Address">
        </div>

        <div class="form-group">
          <label class="sr-only" for="exampleInputPassword2">End</label>
          <input type="text" class="form-control" id="js-end" placeholder="Ending Address">
        </div>
        <button type="submit" class="btn btn-default">Sign in</button>
      </form><hr />
    </div>

    <div class="col-lg-6">
      <div id="map-canvas" style="height:400px; border:1px solid #ddd;" data-coords="<%= @coords %>"></div>
    </div>

    <div class="col-lg-6">
      <div class="directions" style="height:400px; border:1px solid #ddd;" id="js-map-directions"></div>
    </div>
  </div>

<% end %>
